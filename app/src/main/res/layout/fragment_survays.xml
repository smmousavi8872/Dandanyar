<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginStart="16dp"
  android:layout_marginEnd="16dp"
  android:background="@color/secondBackground"
  android:orientation="vertical"
  tools:context=".ui.fragments.survays.SurvaysFragment">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/txtDescriptionTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/iran_sans_mobile_bold"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:text="@string/main_choose_surva_title"
    android:textColor="@color/pureBlack"
    android:textSize="21sp" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/txtDescriptionText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/middleGray"
    android:ellipsize="end"
    android:maxLines="2"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginBottom="16dp"
    android:text="@string/main_choose_survay_text_detail"
    android:textSize="19sp" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvSurvaies"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp" />

</LinearLayout>